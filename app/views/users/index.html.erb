<p id="notice"></P>
<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
<%= render 'books/list', book: @book,user: @user %>
  </div>
<div class="col-md-8 offset-md-1">
<h2>Users</h2>
<div class="b">
<table class="table">
<thead>
  <tr>
  <th>Image</th>
  <th>Name</th>
  <th></th>
  <th colspan="3"></th>
  </tr>
</thead>
<tbody>
  <% @users.each do |user| %>
  <!--＠bookからbookに一つずつ入れていく-->
    <tr>
      <td><% if user.profile_image.attached? %>
            <%= image_tag user.profile_image, size: "80x80" %>
          <% else %>
            <%= image_tag 'no_image', size: "80x80" %>
          <% end %>
      </td>
      <td><%= user.name %></td>
      <td><%= link_to "Show",user_path(user) %></td>
      <% end %>
    </tr>
  </tbody>
</table>
</div>
</div>
</div>
</div>

<div class="container mt-5">
 <div class="row">
  <div class="mx-auto">
   <p>CopyRight Infratop.inc</p>
  </div>
 </div>
</div>