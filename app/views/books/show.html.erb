<%= flash[:notice] %>
<p id="notice"></p>
<div class="container">
<div class="row">
<div class="col-md-3">
<%= render 'list', book: @book_new,user: @user %>
</div>
<div class="col-md-8 offset-md-1">
<h2>Book detail</h2>
<table class="table">
<tbody>
    <tr>
      <td><% if @user.profile_image.attached? %>
            <%= image_tag @user.profile_image, size: "100x100" %>
          <% else %>
            <%= image_tag 'no_image', size: "100x100" %>
          <% end %>
          <br>
          <%= link_to @book.user.name,user_path(@book) %>
      </td>
      <td><%= link_to @book.title,book_path(@book) %></td>
      <td><%= @book.body %></td>
      <td><% if @book.user == current_user %>
          <%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success edit_book_150663"%>
          <% end %>
      </td>
      <td><% if @book.user == current_user %>
          <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-sm btn-danger destroy_book_150663"%>
          <% end %>
      </td>
   </tr>
</tbody>
</table>
</div>